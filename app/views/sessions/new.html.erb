<% provide(:title, "Sign in") %>
 <style type="text/css">
      form {
        max-width: 600px;
        padding: 19px 29px 29px;
        margin: 0 auto 20px;
        background-color: #fff;
        border: 1px solid #e5e5e5;
        -webkit-border-radius: 5px;
           -moz-border-radius: 5px;
                border-radius: 5px;
        -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
           -moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);
                box-shadow: 0 1px 2px rgba(0,0,0,.05);
      }
      form .form-signin-heading,
      form .checkbox {
        margin-bottom: 10px;
      }
      form input[type="text"],
      form input[type="password"] {
        font-size: 16px;
        height: auto;
        margin-bottom: 15px;
        padding: 7px 9px;
      }
 </style>
    <div class="container">
      <%= form_for(:session, url: sessions_path) do |f| %>
        <h2 align="center" class="form-signin-heading">Please sign in</h2>
        <%= f.text_field :email, class: 'form-control', placeholder: 'Email address', required: true, autofocus: true %>
        <%= f.password_field :password, class: 'form-control', placeholder: 'Password', required: true %>
        <%= f.submit "Create my account", class: "btn btn-lg btn-primary btn-block" %>
      	<p>New user? <%= link_to "Sign up now!", signup_path %></p>
      <% end %>
    </div>